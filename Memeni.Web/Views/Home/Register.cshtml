@{
    ViewBag.Title = "Register";
}
<section class="container g-py-100 g-bg-secondary" ng-controller="registerController as regCtrl">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-10 col-lg-8">
            <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30 g-bg-white">
                <header class="text-center mb-4">
                    <h2 class="h2 g-color-black g-font-weight-600">SIGN UP</h2>
                </header>
                <!-- Form -->
                <form class="g-py-15" name="registerForm" novalidate>
                    <!----Hidden input for thirdparty emails on favicon click---->
                    <div style="visibility: hidden; height:1px;"><input id="hiddenEmail" /></div>
                    <div style="visibility: hidden; height:1px;"><input id="hiddenFirstName" /></div>
                    <div style="visibility: hidden; height:1px;"><input id="hiddenLastName" /></div>
                    <!-- Form Social Icons -->
                    <ul class="list-inline text-center mb-4">
                        <li class="list-inline-item g-mx-2">
                            <div id="fb-login">
                                <a class="u-icon-v1 u-icon-size--sm u-icon-slide-up--hover g-color-white g-bg-facebook rounded-circle" href="">
                                    <i class="g-font-size-default g-line-height-1 u-icon__elem-regular fa fa-facebook"></i>
                                    <i class="g-font-size-default g-line-height-0_8 u-icon__elem-hover fa fa-facebook"></i>
                                </a>
                            </div>
                        </li>
                        <li class="list-inline-item g-mx-2">
                            <div id="google-login">
                                <a class="u-icon-v1 u-icon-size--sm u-icon-slide-up--hover g-color-white g-bg-google-plus rounded-circle" href="">
                                    <i class="g-font-size-default g-line-height-1 u-icon__elem-regular fa fa-google-plus"></i>
                                    <i class="g-font-size-default g-line-height-0_8 u-icon__elem-hover fa fa-google-plus"></i>
                                </a>
                            </div>
                        </li>
                        <li class="list-inline-item g-mx-2">
                            <a onclick="liAuth()" class="u-icon-v1 u-icon-size--sm u-icon-slide-up--hover g-color-white g-bg-linkedin rounded-circle" href="">
                                <i class="g-font-size-default g-line-height-1 u-icon__elem-regular fa fa-linkedin"></i>
                                <i class="g-font-size-default g-line-height-0_8 u-icon__elem-hover fa fa-linkedin"></i>
                            </a>
                        </li>
                    </ul>
                    <!-- End Form Social Icons -->
                    <div class="d-flex justify-content-center text-center g-mb-30">
                        <div class="d-inline-block align-self-center g-width-50 g-height-1 g-bg-gray-light-v1"></div>
                        <span class="align-self-center g-color-gray-dark-v3 mx-4">OR</span>
                        <div class="d-inline-block align-self-center g-width-50 g-height-1 g-bg-gray-light-v1"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-7 mb-4">
                            <div class="input-group">
                                <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-primary">
                                    <i class="icon-finance-067 u-line-icon-pro g-pos-rel g-top-2 g-px-5"></i>
                                </span>
                                <input ng-model="regCtrl.registerForm.firstName" required class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded-0 g-py-15 g-px-15" type="text" placeholder="First Name">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-5 mb-4">
                            <div class="input-group">
                                <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-primary">
                                    <i class="icon-finance-067 u-line-icon-pro g-pos-rel g-top-2 g-px-5"></i>
                                </span>
                                <input ng-model="regCtrl.registerForm.lastName" required class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded-0 g-py-15 g-px-15" type="text" placeholder="Last Name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-3 mb-4">
                            <div class="input-group">
                                <input ng-model="regCtrl.registerForm.countryCode" class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded-0 g-py-15 g-px-15" type="text" placeholder="Country">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 mb-4">
                            <div class="input-group">
                                <input ng-model="regCtrl.registerForm.phoneNumber" ng-minlength="5" required class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded-0 g-py-15 g-px-15" type="text" placeholder="Phone Number">
                            </div>
                            <span ng-show="registerForm.phoneNumber.$error.minlength && !registerForm.phoneNumber.$pristine" ng-cloak>Enter Phone Number</span>
                        </div>
                        <div class="col-xs-12 col-sm-3 mb-4">
                            <div class="input-group">
                                <input ng-model="regCtrl.registerForm.extension" class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded-0 g-py-15 g-px-15" type="text" placeholder="Ext.">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 mb-4">
                            <div class="input-group">
                                <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-primary">
                                    <i class="icon-communication-062 u-line-icon-pro g-pos-rel g-top-2 g-px-5"></i>
                                </span>
                                <input ng-model="regCtrl.registerForm.email" required class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded-0 g-py-15 g-px-15" name="email" type="email" placeholder="Email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 mb-4">
                            <div class="input-group">
                                <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-primary">
                                    <i class="icon-media-094 u-line-icon-pro g-pos-rel g-top-2 g-px-5"></i>
                                </span>
                                <input ng-model="regCtrl.registerForm.password" ng-pattern="/^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{6,}$/" ng-minlength="6" class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded-0 g-py-15 g-px-15" name="password" type="password" placeholder="Password" required>
                            </div>
                            <span ng-show="registerForm.password.$error.minlength && !registerForm.password.$pristine" ng-cloak>Enter Password</span>
                        </div>
                        <div class="col-xs-12 col-sm-6 mb-4">
                            <div class="input-group">
                                <span class="input-group-addon g-width-45 g-brd-gray-light-v4 g-color-primary">
                                    <i class="icon-media-094 u-line-icon-pro g-pos-rel g-top-2 g-px-5"></i>
                                </span>
                                <input ng-model="confirmPassword" password-verify="{{regCtrl.registerForm.password}}" ng-minlength="6" class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded-0 g-py-15 g-px-15" name="confirmPassword" type="password" placeholder="Confirm Password" required>
                            </div>
                            <span ng-show="registerForm.confirmPassword.$error.minlength && !registerForm.confirmPassword.$pristine" ng-cloak>Confirm Password</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 mb-4">
                            <label class="form-check-inline u-check g-color-gray-dark-v5 g-font-size-13 g-pl-25">
                                <input class="hidden-xs-up g-pos-abs g-top-0 g-left-0" type="checkbox" name="termsBox" ng-model="registerForm.termsBox" required>
                                <div class="u-check-icon-checkbox-v6 g-absolute-centered--y g-left-0">
                                    <i class="fa" data-check-icon="&#xf00c"></i>
                                </div>
                                I accept the <a href="/Terms">Terms and Conditions</a>
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <!--Captcha Verfication-->
                        <div class="col-xs-12 col-sm-6 mb-4">
                            <div style="margin-bottom:15px;"
                                 class="g-recaptcha" data-sitekey="6LdYGSwUAAAAANrp5YuStmuOBjmrgs_P601UDD2z">
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-md btn-block u-btn-primary rounded-0 g-py-15 mb-5" type="button" ng-disabled="registerForm.$invalid" ng-click="regCtrl.registerUser()">Signup</button>
                </form>
                <!-- End Form -->
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="~/Scripts/Auth/RegisterCtrl.js"></script>
    <script src="~/Scripts/Auth/AuthService.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <!--For google login-->
    <script src="https://apis.google.com/js/platform.js?onload=onLoadGoogleCallback" async defer></script>
    <!--For linkedin login-->
    <script type="text/javascript" src="//platform.linkedin.com/in.js">
