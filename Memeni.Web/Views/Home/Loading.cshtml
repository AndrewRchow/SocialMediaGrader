@{
    ViewBag.Title = "Loading";
    Layout = "~/Views/Shared/_LoadingLayout.cshtml";
}
<div class="ibox " ng-controller="loadingController as loadCtrl">
    <div class="ibox-title" style="text-align: center">
        <h3>Loading</h3>
    </div>
    <div class="ibox-content">
        <div class="spiner-example" style="margin:auto; padding: 400px 0px 500px 0px">
            <div class="sk-spinner sk-spinner-double-bounce">
                <div class="sk-double-bounce1"></div>
                <div class="sk-double-bounce2"></div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script src="~/Scripts/Loading/LoadingCtrl.js"></script>
<script src="~/Scripts/Loading/LoadingService.js"></script>
}