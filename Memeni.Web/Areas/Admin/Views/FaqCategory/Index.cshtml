
@*@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_1.cshtml";
}

<body ng-controller="IndexFaqCategoryController as IndexCtrl">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2><strong>Configuration Settings</strong></h2>
            <ol class="breadcrumb"></ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        Configuration Table
                    </div>
                    <div class="ibox-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form>
                                        <div class="form-group col-lg-1">
                                            <button type="button" ng-click="IndexCtrl.postBtn()">Add</button>
                                        </div>
                                        <div class="form-group col-lg-4">
                                            <span class="label label-default">Search/Filter</span>
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></div>
                                                <input type="text" class="form-control" placeholder="Search" ng-model="search">
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-5" align="center">
                                            <h5 ng-cloak>Showing {{IndexCtrl.showingFirst}} - {{IndexCtrl.showingLast}} of {{IndexCtrl.item}} Settings</h5>
                                            <button class="label label-default" ng-cloak ng-show="userIndexCtrl.item.recordsTotal>IndexCtrl.item" ng-click="IndexCtrl.resetFilter()">Reset Filter</button>
                                        </div>
                                        <div class="form-group col-lg-2">
                                            <span class="label label-default">Display per Page</span>
                                            <select class="form-control" ng-model="display" ng-change="IndexCtrl.displyPage(display)" ng-init="display = 10">
                                                <option value="10">10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                            </select>
                                        </div>
                                    </form>
                                    <table class="table_legenda table table-hover table-condensed table-responsive">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <a href="#" ng-click="sortType = 'displayName'; sortReverse = !sortReverse" style="text-decoration:none; color:inherit;">
                                                        <i class="fa fa-cog" aria-hidden="true"></i> Display Name
                                                        <span ng-show="sortType == 'displayName' && !sortReverse" class="fa fa-caret-down"></span>
                                                        <span ng-show="sortType == 'displayName' && sortReverse" class="fa fa-caret-up"></span>
                                                    </a>
                                                </th>
                                                <th>
                                                    <a href="#" ng-click="sortType = 'description'; sortReverse = !sortReverse" style="text-decoration:none; color:inherit;">
                                                        <i class="fa fa-info" aria-hidden="true"></i> Description
                                                        <span ng-show="sortType == 'description' && !sortReverse" class="fa fa-caret-down"></span>
                                                        <span ng-show="sortType == 'description' && sortReverse" class="fa fa-caret-up"></span>
                                                    </a>
                                                </th>
                                                <th><i class="fa fa-shield" aria-hidden="true"></i> Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in IndexCtrl.allCategories">
                                            <tr dir-paginate="item in IndexCtrl.allCategories|orderBy:sortType:sortReverse|filter:search|itemsPerPage:display" ng-cloak>
                                                <td class="hidden"><strong>{{item.id}}</strong></td>
                                                <td>{{item.displayName}}</td>
                                                <td>{{item.description}}</td>
                                                <td class="hidden">{{item.createdDate}}</td>
                                                <td class="hidden">{{item.modifiedDate}}</td>
                                                <td class="hidden">{{item.modifiedBy}}</td>
                                                <td>
                                                    <input ng-click="IndexCtrl.editBtn(item.id)" type="button" value="Edit" />
                                                    <input class="hidden" IndexCtrl.deleteSettingsBtn(item.id, $index)" type="button" value="Delete" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="col col-sm-12" align="center">
                                        <ul class="pagination">
                                            <li><a href="#" ng-class="{'disabled': IndexCtrl.config[0].displayStart == 0}" ng-click="IndexCtrl.pagination('start')"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a></li>
                                            <li><a href="#" ng-class="{'disabled': IndexCtrl.config[0].displayStart == 0}" ng-click="IndexCtrl.pagination('previous')"><i class="fa fa-angle-left" aria-hidden="true"></i></a></li>
                                            <li><a href="#" class="disabled" ng-cloak>{{userIndexCtrl.page}}</a></li>
                                            <li><a href="#" ng-class="{'disabled': IndexCtrl.showingLast == IndexCtrl.item}" ng-click="IndexCtrl.pagination('next')"><i class="fa fa-angle-right" aria-hidden="true"></i></a></li>
                                            <li><a href="#" ng-class="{'disabled': IndexCtrl.showingLast == IndexCtrl.item}" ng-click="IndexCtrl.pagination('end')"><i class="fa fa-angle-double-right" aria-hidden="true"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section scripts{


    @Scripts.Render("~/bundles/FaqCategory")

}*@

