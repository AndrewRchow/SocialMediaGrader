
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_1.cshtml";
}
<body ng-controller="DataIndexController as dataIndexCtrl">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2><i class="fa fa-cog"></i> Configuration Data Settings</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/admin/home/index">Admin</a>
                </li>
                <li>
                    <a href="/admin/config/index">Config</a>
                </li>
                <li class="active">
                    <strong>Data</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        Configeration Data Table
                    </div>
                    <div class="ibox-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <form>
                                        <div class="form-group col-sm-6">
                                            <span class="label label-default">Search/Filter</span>
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></div>
                                                <input type="text" class="form-control" placeholder="Search" ng-model="search">
                                            </div>
                                        </div>

                                        <div class="form-group col-sm-4"></div>
                                        <div class="form-group col-sm-2">
                                            <span class="label label-default">Display per Page</span>
                                            <select class="form-control" ng-model="display" id="sel1" ng-init="display = 10">
                                                <option value="10">10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                            </select>
                                        </div>
                                    </form>
                                    <table class="table table-hover table-condensed table-responsive">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <a href="#" ng-click="sortType = 'displayName'; sortReverse = !sortReverse" style="text-decoration:none; color:inherit;">
                                                        <i class="fa fa-cog" aria-hidden="true"></i> Display Name
                                                        <span ng-show="sortType == 'displayName' && !sortReverse" class="fa fa-caret-down"></span>
                                                        <span ng-show="sortType == 'displayName' && sortReverse" class="fa fa-caret-up"></span>
                                                    </a>
                                                </th>
                                                <th>
                                                    <a href="#" ng-click="sortType = 'description'; sortReverse = !sortReverse" style="text-decoration:none; color:inherit;">
                                                        <i class="fa fa-info" aria-hidden="true"></i> Description
                                                        <span ng-show="sortType == 'description' && !sortReverse" class="fa fa-caret-down"></span>
                                                        <span ng-show="sortType == 'description' && sortReverse" class="fa fa-caret-up"></span>
                                                    </a>
                                                </th>
                                                <th><i class="fa fa-user" aria-hidden="true"></i> Modified By</th>
                                                <th><i class="fa fa-edit" aria-hidden="true"></i> Edit</th>
                                                <th class="hidden"><i class="fa fa-trash" aria-hidden="true"></i> Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr dir-paginate="item in dataIndexCtrl.item|orderBy:sortType:sortReverse|filter:search|itemsPerPage:display" ng-cloak>
                                                <td class="hidden"><strong>{{item.id}}</strong></td>
                                                <td>{{item.displayName}}</td>
                                                <td>{{item.description}}</td>
                                                <td class="hidden">{{item.createdDate}}</td>
                                                <td class="hidden">{{item.modifiedDate}}</td>
                                                <td>{{item.modifiedBy}}</td>
                                                <td>
                                                    <a href="" class="label label-warning" ng-click="dataIndexCtrl.editBtn(item.id)">
                                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                    </a>
                                                    <a href="" class="label label-danger hidden" ng-click="dataIndexCtrl.deleteBtn(item.id, $index)">
                                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="row-inline" align="center">
                                        <button class="btn btn-sm btn-primary pull-left" type="button" ng-click="dataIndexCtrl.addBtn()">Add New Item</button>
                                        <dir-pagination-controls max-size="5" direction-links="true" boundary-links="true"></dir-pagination-controls>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section scripts{


    @Scripts.Render("~/bundles/config")

}

